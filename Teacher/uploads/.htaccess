# Allow access to uploaded images
<Files "*.jpg">
    Order Allow,Deny
    Allow from all
</Files>

<Files "*.jpeg">
    Order Allow,Deny
    Allow from all
</Files>

<Files "*.png">
    Order Allow,Deny
    Allow from all
</Files>

<Files "*.gif">
    Order Allow,Deny
    Allow from all
</Files>

<Files "*.webp">
    Order Allow,Deny
    Allow from all
</Files>

# Prevent execution of PHP files in uploads directory
<Files "*.php">
    Order Deny,Allow
    Deny from all
</Files>

# Set proper MIME types
AddType image/jpeg .jpg .jpeg
AddType image/png .png
AddType image/gif .gif
AddType image/webp .webp
